<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cars">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <application
        android:name=".CarApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cars">
        <activity
            android:name=".app.presentation.MainActivity"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".registration.presentation.register.RegisterActivity"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".registration.presentation.login.resetPassword.ForgetPasswordActivity"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".registration.presentation.login.LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <service
            android:name=".app.presentation.chatsPage.messages.MessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

    </application>


</manifest>