<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ic_login_background">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/forgotTV"
        android:layout_marginTop="100dp"
        android:layout_width="200dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="false"
        android:textSize="16sp"
        android:textColor="@color/custom3"
        android:gravity="center"
        android:text="Enter phone number:" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/sendPhone"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_login_background"
        android:drawablePadding="10dp"
        android:hint="Phone number"
        android:inputType="phone"
        android:paddingStart="20dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forgotTV"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/code"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_login_background"
        android:drawablePadding="10dp"
        android:hint="code"
        android:maxLength="6"
        android:padding="12dp"
        android:inputType="textEmailAddress"
        android:visibility="invisible"
        android:paddingStart="20dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sendPhone"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/changePassword"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="12dp"
        android:background="@drawable/edit_text_login_background"
        android:drawablePadding="10dp"
        android:maxLength="8"
        android:hint="new password"
        android:inputType="textPassword"
        android:visibility="invisible"
        android:paddingStart="20dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sendPhone"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/send"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="196dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/login_button_background"
        android:textColor="@color/white"
        android:layout_marginBottom="30dp"
        android:text="send" />

    <ProgressBar
        android:id="@+id/progressForgetEntity"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>